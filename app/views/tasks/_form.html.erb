<%= form_with(model: task ,local: true) do |f| %>
  
  <% if task.errors.any? %>
    <div id="error_explanation">
      <% task.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </div>
  <% end %>

  
  <%= f.label :content, "内容" %>
  <%= f.text_field :content %>
  
  <%= f.label :status, "ステータス" %>
  <%= f.text_field :status %>
  
  <%= f.submit "投稿" %>
<% end %>